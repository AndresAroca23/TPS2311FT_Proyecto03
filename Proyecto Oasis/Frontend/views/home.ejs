      cancelButtonText: "Cancelar"
    }).then((result) => {
      if (result.isConfirmed) {
        deleteProduct(id);
      }
    });

  };
  function deleteUserSelected(id) {

    Swal.fire({
      title: "Seguro que desea eliminar este registro?",
      showCancelButton: true,
      confirmButtonColor: "#d33",
      confirmButtonText: "Eliminar",
      cancelButtonText: "Cancelar"
    }).then((result) => {
      if (result.isConfirmed) {
