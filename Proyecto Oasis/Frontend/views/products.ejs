<!--Detalles pedido-->

<div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Detalles pedido</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-row">
                        <div class="form-groups col">
                            <div class="input-group mb-3">

                                <form method="post">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">1</div>
                                        </div>
                                        <input type="text" required class="form-control" id="nombre_id" placeholder="NOMBRE">
                                    </div>
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">2</div>
                                        </div>
                                        <input type="text" required class="form-control" id="telefono_id" placeholder="TELEFONO">
                                    </div>
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">3</div>
                                        </div>
                                        <input required type="text" class="form-control" id="direccion_id"
                                            placeholder="DIRECCION">
                                    </div>
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">4</div>
                                        </div>
                                        <input type="number" min="0" required onchange="CalculatedTotalPrice(event);"
                                            class="form-control" id="cantidad_id" placeholder="CANTIDAD">
                                    </div>

                                    <div class="form-group" style="display: contents;">
                                        <strong>Total a pagar </strong>
                                        <input type="text" id="totalPriceProduct" style="width: 100%;"
                                            class="form-control" disabled>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="alert alert-warning" role="alert">
                    recibiras una llamada para verificar tu pedido
                </div>
                <div class="alert alert-danger" id="dataRequiredPedido" role="alert">
                    Diligencie todos los datos del formulario
                  </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" onclick="BuyProductSelected();" class="btn btn-primary"
                    data-dismiss="modal">Comprar</button>
            </div>
        </div>
    </div>
</div>

